<%- include("header") %> 

<body>
    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>

    <div class="box">
        <% for(let i = 0; i < newListItems.length; i++){ %>
            <div class="box, item" id="<%= i %>" >
                <input type="checkbox">
                <p><%= newListItems[i] %></p>
            </div>
        <% } %>
        <form class="item" action="/" method="POST">
            <input type="text" name="newItem" placeholder="Do this" autocomplete="off">
            <button type="submit" name="currentList" value="<%= listTitle %>">+</button>
        </form>
    </div>

<%- include("footer") %> 